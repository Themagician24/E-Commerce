{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1> Mon Panier </h1>

        <div class="row">


                    <div class="col-md-8">
                {% for product in cart %}

                    <div class="row col-mt-2">
                        <div class="col-md-2">
                        <img src="/uploads/{{ product.object.illustration }}" class="img-fluid" alt="{{ product.object.name }}">
                    </div>
                    <div class="col-md-6">
                        <strong>{{ product.object.name }}</strong>
                        <span class="d-block small"> Prix unitaire : {{ product.object.pricewt|price }}</span>
                    </div>
                    <div class="col-md-2 text-right">
                      <a href="{{ path('app_cart_decrease', { id : product.object.id} ) }}">
                          <small><button class="bg-info text-bg-danger">-</button></small>
                      </a>
                        <span class="badge text-bg-danger">
                           X{{ product.qty }}</span>
                        <a href="{{ path('app_cart_add', { id : product.object.id} ) }}">
                          <small><button class="bg-info text-bg-danger">+</button></small>
                        </a>
                    </div>
                    <div class="col-md-2">
                    <strong> {{ (product.qty * product.object.pricewt)|price }}</strong>
                    </div>
            </div>
                {% endfor %}
                    <a class="text-decoration-none btn btn-bd-primary " href="{{ path('app_cart_remove') }} " ><small>
                             Vider le Panier
                        </small>
                    </a>
                    </div>
            <div class="col-md-4">
                <div class="bg-light p-2">
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Total produit</span>
                        <span>{{ fullCartQuantity }}</span>
                    </div>
                    <div class="d-flex justify-content-between mt-3">
                        <span class="fw-bold">Prix Total T.T.C</span>
                        <span>{{ totalWt|price }}</span>
                    </div>
                    <a href="{{ path('app_order') }}" class="btn btn-bd-primary w-100 mt-3">Commander</a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
