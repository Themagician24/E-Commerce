{% extends 'base.html.twig' %}

{% block body %}

    <!-- Container principal avec une marge supÃ©rieure de 5 -->
    <div class="container my-5">

        <!-- Titre de la page -->
        <h1> Espace membre ðŸ’» </h1>

        <!-- Structure de la page avec une barre latÃ©rale pour le menu et un espace principal pour le contenu -->
        <div class="row">
            <div class="col-md-3">
                <!-- Inclusion du menu de l'espace membre -->
                {% include 'account/menu.html.twig' %}
            </div>

            <div class="col-md-9">
                <!-- Boutons pour retourner Ã  la page d'accueil ou tÃ©lÃ©charger la facture -->
                <small><a href="{{ path('app_account') }}" class="btn btn-danger btn-sm my-3 ">Retour</a> </small><br/>
                <small><a target="_blank" href="{{ path('app_invoice_customer', { id_order : order.id }) }}" class="btn btn-danger btn-sm my-3 ">TÃ©lecharger ma Facture</a> </small><br/>

                <!-- Titre de la commande -->
                <h4 class="bg-body-secondary my-0">Ma commande NÂº{{ order.id}} </h4><br/>

                <!-- Bloc principal pour le contenu de la commande -->
                {% block main %}
                    <!-- Date de passage de la commande -->
                    <span> PassÃ©e le : {{ order.createdAt|date('l d F Y H:i') }}</span> <br/>

                    <!-- Affichage de l'Ã©tat de la commande -->
                    {{ include('admin/state.html.twig', { field : { 'value' : order.state } } ) }}

                    <!-- Informations sur l'adresse de livraison et le transporteur -->
                    <div class="row my-3">
                        <div class="col-md-6">
                            <strong>Adresse de livraison :</strong><br/>
                            {{ order.delivery|raw }}
                        </div>
                        
                        <div class="col-md-6">
                            <strong>Transporteur</strong><br/>
                            {{ order.carriername }}
                        </div>
                    </div>

                    <!-- Tableau pour afficher les dÃ©tails de chaque produit dans la commande -->
                    <table class="table table-group-divider text-capitalize text-bg-info table-hover">
                        <thead>
                        <tr>
                            <th>Illustration</th>
                            <th>Nom du produit</th>
                            <th>QuantitÃ©</th>
                            <th>Prix unitaire H.T</th>
                            <th>TVA</th>
                            <th>Total T.T.C</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in order.orderDetails %}
                            <tr>
                                <td>
                                    <img src="/uploads/{{ product.productIllustration }}" width="100px" alt="{{ product.productName }}">
                                </td>
                                <td>{{ product.productName }}</td>
                                <td>{{ product.productQuantity }}</td>
                                <td>{{ product.productPrice|price }}</td>
                                <td>{{ product.productTva }} %</td>
                                <!-- Calcul du total TTC pour chaque produit -->
                                {% set coeff = 1 + (product.productTva / 100 ) %}
                                <td>{{ ((product.productPrice * coeff) * product.productQuantity ) | price}}</td>
                            </tr>
                        {% endfor %}
                        <!-- Ligne pour le transporteur -->
                        <tr>
                            <td></td>
                            <td>{{ order.carrierName }}</td>
                            <td>1</td>
                            <td></td>
                            <td></td>
                            <td>{{ order.carrierPrice |price }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <!-- Affichage des totaux HT, TVA et TTC -->
                    <div class=" btn btn-bg-dark btn-block  fst-italic font-weight-bold fs-6 ">
                        <strong>Total H.T :</strong> {{ (order.totalWt - order.totalTva) |price }} <br/>
                        <strong>Total TVA :</strong> {{ order.totalTva |price }} <br/>
                        <strong>Total T.T.C :</strong> {{ order.totalWt |price }} <br/>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
